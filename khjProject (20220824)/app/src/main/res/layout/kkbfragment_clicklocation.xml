<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/containPicture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"/>




    </FrameLayout>

    <RelativeLayout
        android:id="@+id/containLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/txtlocation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal"
            android:text="광주 서구청점"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtaddress"
            android:layout_width="264dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="84dp"
            android:layout_toEndOf="@+id/imageView9"
            android:gravity="center"
            android:text="광주광역시 서구 농성동 경열로33"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/kkbtime" />

        <Button
            android:id="@+id/btnplus"
            android:background="#00ff0000"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/imageView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:text="" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="79dp"
            android:src="@drawable/kkblocation" />

        <TextView
            android:id="@+id/timeTV"
            android:layout_width="264dp"
            android:layout_height="42dp"
            android:layout_below="@+id/txtaddress"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imageView8"
            android:gravity="center"
            android:text="운영시간 : 0시~24시 / 연중무휴"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plusTV"
            android:layout_width="264dp"
            android:layout_height="42dp"
            android:layout_below="@+id/timeTV"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/btnplus"
            android:text="   편의시설"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/imageView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/kkbplus" />

        <Switch
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="17dp"
            android:text="즐겨찾기" />

    </RelativeLayout>

    <LinearLayout

        android:id="@+id/linearRest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:orientation="horizontal"
        android:visibility="gone"

        android:weightSum="6">

        <ImageView
            android:id="@+id/imgcctv"
            android:layout_width="15dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            android:src="@drawable/kkbcctv" />

        <ImageView
            android:id="@+id/imggame"
            android:layout_width="15dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            android:src="@drawable/kkbgame" />

        <ImageView
            android:id="@+id/imgtoilet"
            android:layout_width="15dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            android:src="@drawable/kkbtoilt" />

        <ImageView
            android:id="@+id/imgconcent"
            android:layout_width="15dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            android:src="@drawable/kkbconcent" />

        <ImageView
            android:id="@+id/imgwifi"
            android:layout_width="15dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            android:src="@drawable/kkbwifi" />

        <ImageView
            android:id="@+id/imgcoin"
            android:layout_width="15dp"
            android:layout_height="35dp"

            android:layout_weight="1"
            android:src="@drawable/kkbcoinbang" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearRestTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:orientation="horizontal"
        android:visibility="gone"

        android:weightSum="6">

        <TextView
            android:id="@+id/txtcctv"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="cctv"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtgame"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="오락기"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txttoilet"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="화장실"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtconcent"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="콘센트"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtwifi"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WIFI"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtcoin"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="코인노래방"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>