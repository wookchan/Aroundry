<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--타이틀바 시작-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="암호 변경"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#ff7a00"
            android:layout_width="match_parent"
            android:layout_height="53dp"/>

    </LinearLayout>
    <!--타이틀 바 끝-->

    <!-- 내용물 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="기존 비밀번호"
                android:textSize="16sp" />

            <EditText
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/popup2originpw"
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:ems="12"
                android:inputType="textPassword" />


        </LinearLayout>
        <TextView
            android:id="@+id/popup2originpwchk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="53dp"
                android:textSize="16sp"
                android:text="변경할 비밀번호"
                android:gravity="center"/>

            <EditText
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/popup2chpw"
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:ems="12"
                android:inputType="textPassword" />


        </LinearLayout>
        <TextView
            android:id="@+id/popup2chkblank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"

            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="53dp"
                android:textSize="16sp"
                android:text="비밀번호 재입력"
                android:gravity="center"/>

            <EditText
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/popup2chpwchk"
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:ems="12"
                android:inputType="textPassword" />

        </LinearLayout>
        <TextView
            android:id="@+id/popup2chpwchktext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"

            />

    </LinearLayout>
    <!-- 내용물 끝-->
    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--닫기 버튼들-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_weight="1"
            android:text="확인"
            android:textSize="15sp"
            android:textColor="#5579E4"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:id="@+id/popup2select" />

        <Button
            android:layout_weight="1"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="#5579E4"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:id="@+id/popup2cancle" />


    </LinearLayout>
</LinearLayout>